@model FoodInDiary

<div class="container">
	<div class="row justify-content-center align-items-center" style="height:100vh;">
		<div class="col-md-6">

			<form method="post" class="text-center">
				<input asp-for="Id" hidden />
				<div class="card  p-3 mt-4 ">
					<div class="row card-header bg-secondary bg-gradient pb-2 p-1">
						<h2 class="text-info">
							Edit Food In Diary
						</h2>
						<hr />
					</div>
					<div class="row mb-3 p-1">
						<label asp-for="FoodName" class="form-label"></label>
						<input asp-for="FoodName" type="text" class="form-control text-center" />
						<span asp-validation-for="FoodName" class="text-danger"></span>
					</div>
					<div class="row mb-3 p-1">
						<label asp-for="Grams" class="form-label"></label>
						<input asp-for="Grams" type="number" min="0" class="text-center form-control" />
						<span asp-validation-for="Proteins" class="text-danger"></span>

					</div>
					
					<div class="row justify-content-center">
						<div class="col-6 ">
							<button type="submit" class="btn btn-primary form-control">Save</button>

						</div>
						<div class="col-6 ">

							<a asp-controller="Diary" asp-action="Index" class="btn btn-outline-secondary border form-control">Back to Food Table</a>
						</div>
					</div>

				</div>
			</form>
		</div>
	</div>
</div>
@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}