<div class="container">
	<div class="row">

		@{
			@if (Model != null)
			{


				<div class="col-md-12">
					<div class="card bg-light ">
						<div class="card-header d-flex justify-content-between align-items-center bg-primary" style="max-height: 300px; overflow-y: auto;">
							<h4>Daily Diary</h4>
							<p>Date: @Model.DiaryDate.ToShortDateString()</p>
						</div>
						<div class="card-body d-flex justify-content-between align-items-center">
							<h5 class="card-text text-dark fw-bold">Proteins(g): @Model.ProteinsSummary g</h5>
							<h5 class="card-text text-dark fw-bold">Carbs(g): @Model.CarbsSummary g</h5>
							<h5 class="card-text text-dark fw-bold">Fat(g): @Model.FatSummary g</h5>
							<h5 class="card-text text-dark fw-bold">Calories: @Model.CaloriesSummary kcal</h5>

							<div class="card shadow mt-3">
								<h5 class="card-header bg-dark">Food List</h5>
								<div class="card-body bg-secondary text-center" style="max-height: 300px; overflow-y: auto;">
									<table class="table table-secondary">
										<thead>
											<tr>
												<th>Food</th>
												<th>Grams</th>
												<th></th>

											</tr>
										</thead>
										<tbody>
											@foreach (var food in Model.DailyFood)
											{
												<tr>
													<td>@food.FoodName</td>
													<td>@food.Grams</td>
													<td class="text-center">
														<div class="col-auto w-75 text-center justify-content-center" role="group">
															<a asp-controller="Diary" asp-action="EditFood" asp-route-foodId="@food.Id" class="btn-primary btn w-75 mx-2">
																<i class="bi bi-pencil-square"></i> Edit
															</a>
															<a asp-controller="Diary" asp-action="DeleteFood" asp-route-foodId="@food.Id" class="btn btn-danger w-75 mx-2">
																<i class="bi bi-trash"></i> Delete
															</a>
														</div>
													</td>


												</tr>
											}
										</tbody>
									</table>
								</div>
							</div>
						</div>
						<div class="d-flex justify-content-center">

							<div class="col-auto text-center">

								<a asp-controller="Food" asp-action="Index" class="btn btn-primary border">Back to Food Table</a>
							</div>
						</div>
					</div>
				</div>
			}
			else
			{
				<h3>@ViewBag.NotFound</h3>
			}
		}
	</div>
</div>

