@model Food
<div class="container">
	<div class="row justify-content-center " style="height:80vh;">
		<div class="col-md-6">

			<form method="post" class="text-center ">
				<input asp-for="Id" hidden />
				<div class="card  p-3 mt-4 ">
					<div class="row card-header bg-secondary bg-gradient pb-2 p-1">
						<h2 class="text-info">
							Izmeni
						</h2>
						<hr />
					</div>
					<div class=" row mb-3 p-1">
						<div class="form-floating py-2 col-md-6">
							<input asp-for="FoodName" type="text" class="text-center  form-control" />
							<label asp-for="FoodName" class="form-label text-dark ms-4"></label>
							<span asp-validation-for="FoodName" class="text-danger"></span>
						</div>
						<div class="form-floating py-2 col-md-6">
							<select asp-for="TypeOfFood" class="form-select">
								<option class="selectpicker" value="Meso, Riba i jaja">Meso, Riba i jaja</option>
								<option class="selectpicker" value="Mlečni proizvodi">Mlečni proizvodi</option>
								<option class="selectpicker" value="Voće">Voće</option>
								<option class="selectpicker" value="Povrće">Povrće</option>
								<option class="selectpicker" value="Žitarice">Žitarice</option>
								<option class="selectpicker" value="Mahunarke">Mahunarke</option>
								<option class="selectpicker" value="Orašasti plodovi i semenke">Orašasti plodovi i semenke</option>
								<option class="selectpicker" value="Ulja i masti">Ulja i masti</option>
								<option class="selectpicker" value="Slatkiši i grickalice">Slatkiši i grickalice</option>
								<option class="selectpicker" value="Pića">Pića</option>
							</select>
							<label asp-for="TypeOfFood" class="form-label text-dark ms-4"></label>

						</div>
					</div>
					<div class=" row mb-3 p-1">

						<div class="form-floating  py-2 col-md-4">
							<input asp-for="Proteins" type="number" min="0" class="text-center  form-control" step="0.01" pattern="\d+(\.\d{1,2})?" title="Molimo unesite broj sa najviše dve decimale."/>
							<label asp-for="Proteins" class="form-label text-dark ms-4"></label>
							<span asp-validation-for="Proteins" class="text-danger"></span>
						</div>
						<div class="form-floating py-2 col-md-4">
							<input asp-for="Carbs" type="number" min="0" class="text-center form-control" step="0.01" pattern="\d+(\.\d{1,2})?" title="Molimo unesite broj sa najviše dve decimale."/>
							<label asp-for="Carbs" class="form-label text-dark ms-4"></label>
							<span asp-validation-for="Carbs" class="text-danger"></span>
						</div>
						<div class="form-floating py-2 col-md-4">
							<input asp-for="Fat" type="number" min="0" class="text-center form-control" step="0.01" pattern="\d+(\.\d{1,2})?" title="Molimo unesite broj sa najviše dve decimale."/>
							<label asp-for="Fat" class="form-label text-dark ms-4"></label>
							<span asp-validation-for="Fat" class="text-danger"></span>
						</div>
					</div>
					<div class="row justify-content-center">
						<div class="col-6 ">
							<button type="submit" class="btn btn-primary form-control">Izmeni</button>
						</div>
						<div class="col-6 ">
							<a asp-controller="Food" asp-action="Index" class="btn btn-outline-secondary border form-control">Nazad na tabelu</a>
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}