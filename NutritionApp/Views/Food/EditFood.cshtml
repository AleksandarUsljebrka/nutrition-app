@model Food
<div class="container">
	<div class="row justify-content-center align-items-center" style="height:100vh;">
		<div class="col-md-6">

			<form method="post" class="text-center">
				<input asp-for="Id" hidden />
				<div class="card  p-3 mt-4 ">
					<div class="row card-header bg-secondary bg-gradient pb-2 p-1">
						<h2 class="text-info">
							Edit Food
						</h2>
						<hr />
					</div>
					<div class="row mb-3 p-1">
						<label asp-for="FoodName" class="form-label"></label>
						<input asp-for="FoodName" type="text"  class="form-control text-center" />
						<span asp-validation-for="FoodName" class="text-danger"></span>
					</div>
					<div class="row mb-3 p-1">
						<label asp-for="TypeOfFood" class="form-label"></label>
						<select asp-for="TypeOfFood"  class="form-select">
							<option class="selectpicker" value="Meat Fish and Eggs">Meat Fish and Eggs</option>
							<option class="selectpicker" value="Dairy product">Dairy product</option>
							<option class="selectpicker" value="Fruits">Fruits</option>
							<option class="selectpicker" value="Vegetables">Vegetables</option>
							<option class="selectpicker" value="Grains">Grains</option>
							<option class="selectpicker" value="Legumes">Legumes</option>
							<option class="selectpicker" value="Nuts and Seeds">Nuts and Seeds</option>
							<option class="selectpicker" value="Oils and Fats">Oils and Fats</option>
							<option class="selectpicker" value="Sweets and Snacks">Sweets and Snacks</option>
							<option class="selectpicker" value="Beverages">Beverages</option>
						</select>
					</div>
					<div class="row mb-3 p-1">
						<label asp-for="Proteins" class="form-label"></label>
						<input asp-for="Proteins" type="number" min="0" class="text-center form-control" />
						<span asp-validation-for="Proteins" class="text-danger"></span>

					</div>
					<div class="row mb-3 p-1">
						<label asp-for="Carbs" class="form-label"></label>
						<input asp-for="Carbs" type="number" value="@Model.Carbs" min="0" class="text-center form-control" />
						<span asp-validation-for="Carbs" class="text-danger"></span>

					</div>
					<div class="row mb-3 p-1">
						<label asp-for="Fat" class="form-label"></label>
						<input asp-for="Fat" type="number" value="@Model.Fat" min="0" class="text-center form-control" />
						<span asp-validation-for="Fat" class="text-danger"></span>

					</div>
					<div class="row justify-content-center">
						<div class="col-6 ">
							<button type="submit" class="btn btn-primary form-control">Edit</button>

						</div>
						<div class="col-6 ">

							<a asp-controller="Food" asp-action="Index" class="btn btn-outline-secondary border form-control">Back to Food Table</a>
						</div>
					</div>

				</div>
			</form>
		</div>
	</div>
</div>
@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}