@{
    ViewData["Title"] = "Home Page";
}
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> signInManager


@if (!signInManager.IsSignedIn(User))
{
    <div class="text-center">
        <h1 class="display-4">Dobrodošli!</h1>
    
    </div>
    <div class="text-center">
        
        <h3><a asp-controller="User" asp-action="Login">Prijavite se</a> da bi koristili aplikaciju.</h3>
        
        <h4>Nemate nalog? Napravite nalog <a asp-controller="User" asp-action="Register">ovde.</a> </h4>
    </div>
}