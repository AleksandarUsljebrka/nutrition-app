@model User
<div class="container">
	<div class="row justify-content-center " style="height:80vh;">
		<div class="col-md-6">

			<form method="post" class="text-center ">
				<input asp-for="Id" hidden />
				<div class="card  p-3 mt-4 ">
					<div class="row card-header bg-secondary bg-gradient pb-2 p-1">
						<h2 class="text-info">
							Obrši Korisnika
						</h2>
						<hr />
					</div>
					
						<div class="form-floating py-2 col-md-12">
						<input asp-for="UserName" readonly type="text" class="text-center  form-control" />
							<label asp-for="UserName" class="form-label text-dark ms-4"></label>
							
						</div>
					
					
					<div class=" row mb-3 p-1">

						<div class="form-floating  py-2 col-md-6">
							<input asp-for="Name" readonly type="text" min="0" class="text-center  form-control" />
							<label asp-for="Name" class="form-label text-dark ms-4"></label>
					
						</div>
						<div class="form-floating py-2 col-md-6">
							<input asp-for="Email" readonly type="text" min="0" class="text-center form-control" />
							<label asp-for="Email" class="form-label text-dark ms-4"></label>
						</div>
					</div>
					<div class="row justify-content-center">
						<div class="col-6 ">
							<button type="submit" class="btn btn-primary form-control">Obrisi</button>
						</div>
						<div class="col-6 ">
							<a asp-controller="User" asp-action="AllUsers" class="btn btn-outline-secondary border form-control">Nazad na korisnike</a>
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
